{
  "name": "backend",
  "version": "0.0.1",
  "packageManager": "bun@1.0.27",
  "type": "module",
  "scripts": {
    "build": "bun build ./src/index.ts --target=bun --outdir=dist --format=esm --external './src/external' && cp -r src/external dist/external/",
    "start": "bun run dist/index.js",
    "dev": "bun run --watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:push": "bun drizzle-kit push",
    "db:pull": "bun drizzle-kit pull",
    "db:check": "bun drizzle-kit check",
    "db:up": "bun drizzle-kit up",
    "db:studio": "bun drizzle-kit studio"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@types/ora": "^3.2.0",
    "bun-types": "^1.1.40",
    "drizzle-kit": "^0.30.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/cors": "^2.8.17",
    "agent-twitter-client": "^0.0.16",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "drizzle-orm": "^0.38.3",
    "express": "^4.18.2",
    "ora": "^8.1.1",
    "winston": "^3.17.0",
    "winston-console-format": "^1.0.8"
  }
}
