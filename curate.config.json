          ]
        },
        "recap": {
          "enabled": true,
          "schedule": "0 0 * * 0",
          "transform": {
            "plugin": "@curatedotfun/gpt-transform",
            "config": {
              "prompt": "./prompts/ethereum_weekly.txt"
            }
          },
          "distribute": [
            {
